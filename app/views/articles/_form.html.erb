<%= form_with(model: article, local: true) do |f| %>
  <%= render "shared/errors", object: article %>

  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true ,class: 'form-control', required: true %>

  <%= f.label :text %>
  <%= f.text_area :text, rows: 10 ,class: 'form-control', required: true %>

  <%= f.collection_select :category_id, Category.all, :id, :name,{prompt: "Select A Category"},class: 'form-control' %>
  
  <%# <fieldset> %>
    <%= f.label :image %>
    <%= f.hidden_field :image_cache %>
    <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
  <%# </fieldset> %>

      
      <%= f.label :prix_max, 'Prix :' %>
      <%= f.number_field :prix_max, class: 'form-control', required: true, min: 0 %>

        <%= f.label :Ville %>
         <%= f.text_field :ville,class: 'form-control', required: true%>

  <%= f.submit :CRRER_ANNONCE%>
<% end %>